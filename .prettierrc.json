{
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",
  "parser": "typescript",
  "overrides": [
    {
      "files": "*.json",
      "options": { "parser": "json" }
    },
    {
      "files": "*.md",
      "options": { "parser": "markdown" }
    },
    {
      "files": "*.md",
      "options": { "proseWrap": "preserve" }
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": { "parser": "yaml" }
    }
  ]
}
