{
  "name": "action-oss-upload",
  "description": "This GitHub Action uploads generated files to an OSS bucket",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16.16.0",
    "npm": ">=7.9.0"
  },
  "scripts": {
    "precompile": "npm run lint && npm run format",
    "compile": "tsc",
    "postcompile": "prettier --write lib/**/*.js",
    "lint:check": "eslint src/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "format:check": "prettier --check **/*.js **/*.json **/*.md **/*.ts **/*.yaml",
    "format": "prettier --write *.js **/*.json **/*.md **/*.ts **/*.yaml",
    "prebuild": "npm run compile",
    "build": "esbuild lib/main.js --bundle --platform=node --target=node16 --outfile=dist/index.js",
    "postbuild": "prettier --write dist/**/*.js",
    "update": "npx -y typesync && npx -y npm-check-updates -u",
    "postupdate": "npm install && npm update && npm run build"
  },
  "repository": "github:frenchvandal/action-oss-upload",
  "keywords": [
    "actions",
    "hugo",
    "build",
    "package",
    "website",
    "aliyun",
    "alioss"
  ],
  "author": "frenchvandal",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.4.0",
    "ali-oss": "^6.18.0",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/ali-oss": "^6.16.8",
    "@types/eslint": "^8.44.2",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/node": "^20.5.7",
    "@types/prettier": "^2.7.2",
    "@types/standard-version": "^7.1.0",
    "@typescript-eslint/eslint-plugin": "^6.5.0",
    "@typescript-eslint/parser": "^6.5.0",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "typescript": "^5.2.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yaml}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "dist/**/*.js",
        "options": {
          "printWidth": 120,
          "singleQuote": false,
          "trailingComma": "none"
        }
      }
    ]
  }
}
