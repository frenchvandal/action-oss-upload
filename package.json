{
  "name": "action-oss-upload",
  "description": "This GitHub Action uploads generated files to an OSS bucket",
  "main": "dist/index.js",
  "engines": {
    "node": ">=16.16.0",
    "npm": ">=7.9.0"
  },
  "scripts": {
    "precompile": "npm run lint && npm run format",
    "compile": "tsc",
    "postcompile": "prettier --write lib/**/*.js",
    "lint:check": "eslint src/**/*.ts",
    "lint": "eslint --fix src/**/*.ts",
    "format:check": "prettier --check **/*.js **/*.json **/*.md **/*.ts **/*.yaml",
    "format": "prettier --write *.js **/*.json **/*.md **/*.ts **/*.yaml",
    "prebuild": "npm run compile",
    "build": "esbuild lib/main.js --bundle --platform=node --target=node16 --outfile=dist/index.js",
    "postbuild": "prettier --write dist/**/*.js",
    "update": "npx -y typesync && npx -y npm-check-updates -u",
    "postupdate": "npm install && npm update"
  },
  "repository": "github:frenchvandal/action-oss-upload",
  "keywords": [
    "actions",
    "hugo",
    "build",
    "package",
    "website",
    "aliyun",
    "alioss"
  ],
  "author": "frenchvandal",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.3.0",
    "ali-oss": "^6.17.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/ali-oss": "^6.16.4",
    "@types/eslint": "^8.4.6",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/node": "^18.7.13",
    "@types/prettier": "^2.7.0",
    "@types/standard-version": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "esbuild": "^0.15.5",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "standard-version": "^9.5.0",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,yaml}": "prettier --write"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": "dist/**/*.js",
        "options": {
          "printWidth": 120,
          "singleQuote": false,
          "trailingComma": "none"
        }
      }
    ]
  }
}
